# -----------------------------
# CodeVoyage Environment Template
# -----------------------------

# Database
POSTGRES_USER=codevoyage
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=codevoyage
DATABASE_URL=postgresql://codevoyage:your_secure_password_here@postgres:5432/codevoyage

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_TIMEOUT=3600
CELERY_MAX_RETRIES=3
CELERY_WORKER_CONCURRENCY=4

# API
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False
SECRET_KEY=replace_with_64_char_random_secret
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
ENABLE_AI_INSIGHTS=false

# GitHub API (optional)
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_API_RATE_LIMIT=5000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Caching
CACHE_TTL_SECONDS=3600
REDIS_CACHE_PREFIX=codevoyage:cache:

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Analysis / Throughput
MAX_UPLOAD_SIZE_MB=500
TEMP_STORAGE_PATH=/tmp/repos
MAX_COMMITS_TO_ANALYZE=2000
BATCH_SIZE=100
GIT_CLONE_DEPTH=2000
COMMIT_STATS_LIMIT=1000
MAX_FILES_FOR_COMPLEXITY=2000

# Frontend Runtime
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=http://localhost:8000
NEXT_PUBLIC_WS_PATH=/ws/socket.io

# Monitoring (optional)
SENTRY_DSN=
ENABLE_METRICS=false
